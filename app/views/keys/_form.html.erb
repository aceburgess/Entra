<div class="container-fluid col-centered">
  <div class='url-link col-md-8 col-centered'>

    <div id="email-field-container" class="input-group">
      <input id="guest-email" type="email" class="form-control" placeholder="Email...">
      <span class="input-group-btn">
        <button id="send-email" class="btn btn-default" type="button">Send email</button>
      </span>
    </div>

    <div class="list-group">
      <input id="key_sc" type="text" class="list-group-item form-control secret-url text-center" data-key-id='<%= @key.id %>' value="<%= base_url + '/' + @key.secret_url %>" aria-describedby="sizing-addon2">
      <input type="text" data-end-date='<%=@key.end_date %>' class="form-control key-expires-in list-group-item text-center" disabled="disabled" value="This key expires in 24hrs">
      <div class="list-group-item">
        <span>Unlimited access? <input id="give-unlimited-access" type="checkbox" aria-label="..."></span>
      </div>
    </div>
    <div id="extend-access-container" class="btn-group">
      <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
        Extend Access <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li><a id="48_hours" href="">48 Hours</a></li>
        <li><a id="3_days" href="">Three Days</a></li>
        <li><a id="1_week" href="">A Week</a></li>
        <li><a id="2_weeks" href="">Two Weeks</a></li>
        <li><a id="1_month" href="">A Month</a></li>
      </ul>
    </div>
  </div>
</div>